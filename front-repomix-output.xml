import { Component, EventEmitter, Output, inject } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormBuilder, FormGroup, ReactiveFormsModule, Validators } from '@angular/forms';
import { StockStore } from '../stock.store';
import { CreateStockItemDto } from '../../../core/models/stock.interfaces';
import { StockService } from '../../../core/services/stock.service';

@Component({
  selector: 'app-estoque-form',
  standalone: true,
  imports: [CommonModule, ReactiveFormsModule],
  templateUrl: './estoque-form.component.html',
})
export class EstoqueFormComponent {
  private fb = inject(FormBuilder);
  private stockService = inject(StockService); // Injetamos o servi√ßo HTTP
  private store = inject(StockStore);

  @Output() close = new EventEmitter<void>();

  stockForm: FormGroup = this.fb.group({
    name: ['', [Validators.required, Validators.minLength(3)]],
    sku: ['', [Validators.required]], // C√≥digo √∫nico da pe√ßa
    category: ['Pe√ßas Gerais', Validators.required],
    currentQuantity: [0, [Validators.required, Validators.min(0)]],
    minQuantity: [1, [Validators.required, Validators.min(0)]],
    unitPrice: [0, [Validators.required, Validators.min(0)]],
    isCritical: [false], // Se for pe√ßa de seguran√ßa/emerg√™ncia
  });

  onSubmit() {
    if (this.stockForm.valid) {
      const data: CreateStockItemDto = this.stockForm.value;

      // Disparamos a a√ß√£o no Store
      this.store.createItem(data);

      // Emitimos o evento de fechar o modal
      this.close.emit();
    }
  }
}
